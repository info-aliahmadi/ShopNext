{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@dashboard/*": [
        "./app/dashboard/*"
      ],
      "@(home)/*": [
        "./app/(home)/*"
      ],
      "@api/*": [
        "./app/api/*"
      ],
      "/*": [
        "./*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts", "app/dashboard/_components/Editor/LoadInitialContent.tsx" ],
  "exclude": [
    "node_modules",
    "./public/**/*.ts"
  ]
}
