{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "plugins": [
        {
          "name": "next"
        }
      ],
      "paths": {
        "@dashboard/*": [
          "./app/dashboard/*"
        ],
        "@(home)/*": [
          "./app/(home)/*"
        ],
        "@api/*": [
          "./app/api/*"
        ],
        "/*": [
          "./*"
        ]
      }
    },
    "exclude": ["node_modules"]
  } 